extends ../layout/admin 

block contenido
    h2(class="text-2xl font-extrabold text-center my-10")= pagina

    a(href="/mis-propiedades" class="rounded py-2 px-10 bg-green hover-bg-orange text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Volver

    div(class="mx-auto max-w-4xl bg-white shadow")

        if mensajes.length 
            ul 
                each mensaje in mensajes 
                    li(class="border-gray border-b p-5")
                        p(class="font-bold text-gray") Nombre: 
                            span(class="font-normal")= mensaje.usuario.nombre


                        p(class="font-bold text-gray") Email: 
                            span(class="font-normal")= mensaje.usuario.email    

                        p(class="font-bold text-gray") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje

                        p(class="font-bold text-gray") Enviado: 
                            span(class="font-normal")= formatearFecha( mensaje.createdAt )       
        else 
            p(class="text-center text-gray p-5") No hay Mensajes   
extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-green Bienes
            span.font-normal.text-orange Raíces  
        h2.text-center.text-2xl.font-extrabold.text-gray= pagina

        if errores
                div(class="max-w-md mx-auto my-10")
                    each error, index in errores
                        div(id="error-#{index}" class="flex items-center p-4 mb-4 text-sm text-reds border border-reds rounded-lg bg-red1 dark:text-reds dark:border-reds alert" role="alert")
                            svg(class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20")
                                path(d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z")
                            span(class="sr-only") Info
                            div
                                span(class="font-medium") 
                                | #{error.msg}
                style.
                    .alert {
                        animation: hideAlert 5s forwards;
                    }

                    @keyframes hideAlert {
                        0% {
                            opacity: 1;
                        }
                        99% {
                            opacity: 1;
                        }
                        100% {
                            opacity: 0;
                            visibility: hidden;
                            display: none;
                        }
                    }


        div(class="bg-white shadow-md py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(method="POST" )
                input(type="hidden" name="_csrf" value= csrfToken)
                div.space-y-8
                    h3.text-lg.leading-6.font-medium.text-gray Información General
                    p.text-gray Añade Información sobre la propiedad en venta

                    div 
                        label.block.text-sm.uppercase.text-gray.mb-3.font-bold(for="titulo") Titulo de anuncio
                        input#titulo.w-full.px-3.py-2.border.border-gray.rounded-md.placeholder-gray(placeholder="Titulo Propiedad, ej. Casa en la Playa" type="text" name="titulo" value= datos.titulo ? datos.titulo : '') 

                    div
                        label(for="descripcion", class="block text-sm uppercase text-gray mb-3 font-bold") Descripcion
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray.rounded-md.placeholder-gray(placeholder="Descripcion de la propiedad" name="descripcion")= datos.descripcion ? datos.descripcion : ''


                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray.mb-3.font-bold(for="categoria") Categoria
                            select#categoria.w-full.px-3.py-2.border.border-gray.rounded-md.placeholder-gray(name="categoria")     
                                option(value="") - Seleccione -
                                each categoria in categorias 
                                    option(value=categoria.id selected= datos.categoriaID ? datos.categoriaID == categoria.id ? true : false : null )= categoria.nombre
            
                        div(class="md:w-1/2") 
                            label.block.text-sm.uppercase.text-gray.mb-3.font-bold(for="precio") Precio
                            select#precio.w-full.px-3.py-2.border.border-gray.rounded-md.placeholder-gray(name="precio")     
                                option(value="") - Seleccione -
                                each precio in precios 
                                    option(value=precio.id selected= datos.precioID ? datos.precioID == precio.id ? true : false : null)= precio.nombre
            
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray.mb-3.font-bold(for="habitaciones") Habitaciones
                            select#habitaciones.w-full.px-3.py-2.border.border-gray.rounded-md.placeholder-gray(name="habitaciones")     
                                option(value="") - Seleccione -
                                - var n = 0;
                                while n < 10
                                    option(value=n selected= datos.habitaciones ? datos.habitaciones == n ? true : false : null) #{n++}
            
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray.mb-3.font-bold(for="estacionamiento") Estacionamiento
                            select#estacionamiento.w-full.px-3.py-2.border.border-gray.rounded-md.placeholder-gray(name="estacionamiento")     
                                option(value="") - Seleccione -
                                - var n = 0;
                                while n < 5
                                    option(value=n selected= datos.estacionamiento ? datos.estacionamiento == n ? true : false : null) #{n++}
                        div(class="md:w-1/3") 
                            label.block.text-sm.uppercase.text-gray.mb-3.font-bold(for="wc") WC
                            select#wc.w-full.px-3.py-2.border.border-gray.rounded-md.placeholder-gray(name="wc")     
                                option(value="") - Seleccione -
                                - var n = 0;
                                while n < 5
                                    option(value=n selected= datos.wc ? datos.wc == n ? true : false : null) #{n++}

                    div.border-gray.border-t.py-5.space-y-5
                        h3.text-lg.leading-6.font-medium.text-gray Ubicación
                        p.text-gray Ubica la propiedad en el mapa                
                        #mapa.h-96  

                        div 
                            p.calle= datos.calle ? datos.calle : '' 

                        input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle : '' )
                        input(type="hidden" name="lat" id="lat" value= datos.lat ? datos.lat : '')
                        input(type="hidden" name="lng" id="lng" value= datos.lng ? datos.lng : '')


                    input(class="w-full py-3 bg-green hover:bg-orange rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar Cambios")    
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")
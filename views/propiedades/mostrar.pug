extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div(class="py-5")
        h1(id="titulo" class="text-4xl my-10 font-extrabold text-center")= propiedad.titulo

        div
            a(href="#" class="font-bold text-gray-400 text-sm") Categoria: 
                span(class="font-bold text-xl text-black")= propiedad.categoria.nombre 

        div(class="mt-5 md:flex md:gap-4 md:items-start")
            div(class="md:w-2/3 bg-white shadow rounded-lg") 
                img(src=`/uploads/${propiedad.imagen}` , alt=`imagen de la propiedad ${propiedad.titulo}`)

                div(class="px-5 py-10 space-y-5")
                    p= propiedad.descripcion
                    h2(class="text-2xl leading-6 font-bold text-gray-900 ") Informacion propiedad

                    div(class="grid grid-cols-1 md:grid-cols-2")
                        p(class="text-gray font-bold text-xs") WC
                            span(class="text-gray block text-lg")= propiedad.wc
           
                        p(class="text-gray font-bold text-xs") Habitaciones
                            span(class="text-gray block text-lg")= propiedad.habitaciones
                        
                        p(class="text-gray font-bold text-xs") Estacionamiento
                            span(class="text-gray block text-lg")= propiedad.estacionamiento
                        
                        p(class="text-gray font-bold text-xs") Precio
                            span(class="text-gray block text-lg")= propiedad.precio.nombre
                        p(class="text-gray font-bold text-xs") Operacion 
                            span(class="text-gray font-bold text-lg")= propiedad.operacion
           
           
            aside(class="md:w-1/3 bg-white shadow rounded-lg")
                h1(class="text-center py-10 leading-6 text-2xl font-bold text-gray") Ubicaci√≥n

                div(class="h-96" id="mapa")
                    p(id="lat" class="hidden")= propiedad.lat
                    p(id="lng" class="hidden")= propiedad.lng

                div(class="p-5") 
                    p(class="text-gray font-bold text-xs") Direccion 
                        span(id="calle" class="text-gray block text-lg")= propiedad.calle  

                    
                    if !esVendedor
                        h3(class="text-2xl text-center my-10 font-extrabold text-gray") Vendedor

                        if enviado 
                            p(class="p-2 text-center bg-green text-white uppercase font-bold") Mensaje Enviado Correctamente


                        if usuario

                            if errores
                                div(class="max-w-md mx-auto my-10")
                                    each error, index in errores
                                        div(id="error-#{index}" class="flex items-center p-4 mb-4 text-sm text-reds border border-reds rounded-lg bg-red1 dark:text-reds dark:border-reds alert" role="alert")
                                            svg(class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20")
                                                path(d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z")
                                            span(class="sr-only") Info
                                            div
                                                span(class="font-medium") 
                                                | #{error.msg}
                                style.
                                    .alert {
                                        animation: hideAlert 5s forwards;
                                    }

                                    @keyframes hideAlert {
                                        0% {
                                            opacity: 1;
                                        }
                                        99% {
                                            opacity: 1;
                                        }
                                        100% {
                                            opacity: 0;
                                            visibility: hidden;
                                            display: none;
                                        }
                                    }



                            form(method="POST" action="") 
                                input(type="hidden" name="_csrf" value= csrfToken)

                                div(class="space-y-5")
                                    label(for="mensaje") Mensaje 
                                    
                                    textarea(id="mensaje", name="mensaje" ,class="w-full px-2 py-2 border border-gray rounded-lg shadow placeholder-gray-400" ,placeholder="Coloca tu mensaje aqui")  

                                    input(type="submit" value="Enviar Mensaje" class="bg-green text-white font-bold rounded-lg uppercase text-sm w-full p-2 cursor-pointer")

                        else 
                            div(class="flex flex-col items-center justify-center gap-2")
                                p(class="text-center") Si deseas contactar al vendedor 
                                a(class="text-orange" href="/auth/crear-cuenta")


block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mostrarMapa.js") 